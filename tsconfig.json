{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "rootDir": "src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": [".storybook", "node_modules", "dist", "src/**/*.stories"]
}
